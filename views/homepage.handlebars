{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.username}}</a>
    </h2>
    <p>Created by {{post.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <h3>{{post.title}}</h3>
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
